config interface 'loopback'
	option ifname 'lo'
	option proto 'static'
	option ipaddr '127.0.0.1'
	option netmask '255.0.0.0'

config globals 'globals'
	option ula_prefix 'fd1d:48c4:7633::/48'

# station mode WiFi v4
config interface 'wlan'
	option proto 'dhcp'
	option hostname 'hermel-WiFi'
	option enabled '1'

# station mode WiFi v6
config interface 'wlanv6'
	option proto 'dhcpv6'
	option hostname 'hermel-WiFi-v6'
	option enabled '1'

# Ethernet v4
config interface 'lan'
	option ifname 'eth0'
	option proto 'dhcp'
	option hostname 'hermel-LAN'
	option enabled '1'

# Ethernet v6
config interface 'lanv6'
	option ifname 'eth0'
	option proto 'dhcpv6'
	option ipv6 '1'
	option hostname 'hermel-LAN-v6'
	option enabled '1'

# AP mode WiFi
config interface 'wlanap'
	option proto 'static'
	option ipaddr '192.168.44.1'
	option netmask '255.255.255.0'
	option enabled '1'
